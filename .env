# ===========================================
# PrintWibe E-Commerce - Environment Variables
# ===========================================

# MongoDB Connection
# Get from: https://cloud.mongodb.com/
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/printwibe?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/printwibe

# JWT Authentication
# Generate a secure random string (min 32 characters)
# You can generate one at: https://generate-secret.vercel.app/32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# Razorpay Payment Gateway
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx

# Vercel Blob Storage (for custom design uploads)
# Automatically available when you add Blob storage in Vercel dashboard
BLOB_READ_WRITE_TOKEN=vercel_blob_xxxxxxxxxxxx

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=PrintWibe

# Admin Email (for order notifications)
ADMIN_EMAIL=admin@printwibe.com

# Optional: Email Service (Resend)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx
