# ===========================================
# PrintWibe E-Commerce - Environment Variables
# ===========================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# Never commit .env file to version control

# MongoDB Connection
# Get from: https://cloud.mongodb.com/
# Example: mongodb+srv://username:password@cluster.mongodb.net/?appName=YourApp
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/?appName=YourApp
# For local development:
# MONGODB_URI=mongodb://localhost:27017/printwibe

# JWT Authentication
# Generate a secure random string (min 32 characters)
# You can generate one at: https://generate-secret.vercel.app/32
# Or use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-to-random-32-chars
ADMIN_JWT_SECRET=your-admin-secret-key-change-this-to-random-32-chars

# NextAuth Configuration (for OAuth)
# Generate: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-change-this-to-random-32-chars
NEXTAUTH_URL=http://localhost:3000

# Google OAuth Authentication
# Get from: https://console.cloud.google.com/apis/credentials
# 1. Create a new OAuth 2.0 Client ID
# 2. Add authorized redirect URI: http://localhost:3000/api/auth/callback/google
# 3. For production, add: https://yourdomain.com/api/auth/callback/google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===========================================
# Admin Seeding Configuration
# ===========================================
# Initial admin account credentials (used by scripts/seed-admin.ts)
# IMPORTANT: Change these after running the seed script!
ADMIN_SEED_EMAIL=
ADMIN_SEED_PASSWORD=
ADMIN_SEED_NAME=

# Razorpay Payment Gateway
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_your_key_id

# Vercel Blob Storage (for custom design uploads)
# Automatically available when you add Blob storage in Vercel dashboard
# Get from: https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN=vercel_blob_your_token_here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=PrintWibe

# Admin Email (for order notifications)
ADMIN_EMAIL=

# Optional: Email Service (Resend)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Node Environment
NODE_ENV=development
